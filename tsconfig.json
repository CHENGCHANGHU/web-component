{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2022"],
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src"]
}